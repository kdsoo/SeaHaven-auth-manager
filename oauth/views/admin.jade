doctype html
html
  head
    title User credential required
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='stylesheets/style.css')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js', integrity='sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV', crossorigin='anonymous')
    script(src='oauth/javascripts/admin.js')
  body
    #container.container
      .card
        .card-header
          div(align='center')
            h4.card-title SeaHaven credential manager
          .row.row-list
            ul.nav.nav-tabs
              li.nav-item
                a#active-tab.nav-link.active(href='admin?cat=active') Ative user
              li.nav-item
                a#pending-tab.nav-link(href='admin?cat=pending') Pendig user
        // card-header
        .card-body
          .table-responsive
            thread
            table.table
              tbody
                tr
                  th(scope='col') Num
                  th(scope='col') Admin
                  th(scope='col') OAuth
                  th(scope='col') ID
                  th(scope='col') Description
                  th(scope='col') photo
                  th(scope='col') accept
                  th(scope='col') reject
                  th(scope='col') suspend
              tbody#userlist
        // card-body
        .card-footer
          .row.row-list
            #loggedID.col-4 Current ID: 
          button.btn.btn-info.btn-sm(onclick='location.href="account"') Update account
          button.btn.btn-danger.btn-sm(onclick='location.href="logout"') LOGOUT
          div(align='center') Â© 2020 The SeaHaven project
        // card-footer
        // card
