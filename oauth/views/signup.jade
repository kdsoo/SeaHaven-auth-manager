    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z', crossorigin='anonymous')
    | &#x9;&#x9;
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js', integrity='sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV', crossorigin='anonymous')
  | &#x9;
  body
    .container
      .d-flex.justify-content-center.h-100
        .card(style='width: 30rem;')
          .card-header
            h3 Local account signup
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          .card-body
            form#local-form(name='local', action='signup', method='post', onsubmit='return checkForm();')
              label.control-label(for='username') Email
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              .input-group
                input#id.form-control(type='text', name='username', autocomplete='username', placeholder='Email as username')
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                button.btn.btn-success.btn-sm(type='button', onclick='dupIdCheck();') Check ID
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                input#idVerified(type='hidden', name='idVerified', value='false')
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              .input-group
                label.control-label(for='realname') Name
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                .input-group.form-group
                  input#realname.form-control(type='text', name='realname', placeholder='realname')
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              .bg-light.clearfix(style='padding: 10px 10px 10px 10px')
                .input-group
                  label.control-label(for='password') Password
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  .input-group.form-group
                    input#password.form-control(type='password', name='password', autocomplete='new-password', placeholder='password')
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                .input-group
                  label.control-label(for='verifyPassword') Verify password
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  .input-group.form-group
                    input#passwordConfirm.form-control(type='password', name='verifyPassword', placeholder='Verify password')
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  input#passwdVerified(type='hidden', name='passwdVerified', value='false')
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  #passwordMatch(align='right')
                  | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                  input#input-referer(type='hidden', name='referer', value='')
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              .clearfix
                input.btn.btn-secondary.float-right(type='submit', name='signup', value='Signup')
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          .card-footer
            div(align='center') &copy; 2020 The SeaHaven project
    | &#x9;&#x9;
    script(src='../../oauth/javascripts/signup.js')
